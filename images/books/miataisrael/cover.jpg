<svg width="300" height="450" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bookGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c5aa0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#7b68ee;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="300" height="450" fill="url(#bookGradient)"/>
  
  <!-- Book spine effect -->
  <rect x="0" y="0" width="30" height="450" fill="#000" opacity="0.2"/>
  
  <!-- Title area -->
  <rect x="40" y="80" width="220" height="290" fill="#fff" opacity="0.1" rx="8"/>
  
  <!-- Hebrew title -->
  <text x="150" y="200" font-family="Arial" font-size="36" fill="white" text-anchor="middle" font-weight="bold">
    מי אתה
  </text>
  <text x="150" y="250" font-family="Arial" font-size="36" fill="white" text-anchor="middle" font-weight="bold">
    ישראל?
  </text>
  
  <!-- Decorative line -->
  <line x1="80" y1="280" x2="220" y2="280" stroke="white" stroke-width="2"/>
  
  <!-- Author -->
  <text x="150" y="330" font-family="Arial" font-size="18" fill="white" text-anchor="middle">
    גִלַלְיָה טיאר
  </text>
  
  <!-- Bottom decoration -->
  <circle cx="150" cy="400" r="20" fill="none" stroke="#d4af37" stroke-width="2"/>
</svg>
